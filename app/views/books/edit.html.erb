<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <p>
    <%= link_to "Show", book_path(@book) %>
  </p>

  <p>
    <%= link_to "Back", book_path(@book) %>
  </p>

<% end %>