<!-- form_with部分-->
<%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>

　<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <%= render 'form' %>

<% end %>
