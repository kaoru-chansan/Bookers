<div class="index-body">

<h2 class="headline2">Books</h2>
  <div class="book-box">
    <div class="head-book1">
      <h5>Title</h5>
      <h5>Body</h5>
    </div>

    <% @books.each do |book| %>

    <div class="book-comment">
      <span><%= book.title %></span>
      <span><%= book.body %></span>

      <p>
        <%= link_to "Show", book_path(book) %>
      </p>

      <p>
        <%= link_to "Edit", edit_book_path(book) %>
      </p>

      <p>
        <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </p>
    </div>
    <% end %>
  </div>



<h3 class="headline3">New book</h3>

<% if @book && @book.errors.any? %>
  <div id="error_explanation">
    <strong><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</strong>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>

  <div class="new-text">
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>
    </div>

    <p>
    <%= f.submit 'Create Book' %>
    </p>
 </div>
<% end %>


