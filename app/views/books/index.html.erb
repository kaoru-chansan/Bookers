<h1>Books</h1>

<% @books.each do |book| %>

  <p>title</p>
  <span><%= book.title %></span>

  <p>body</p>
  <span><%= book.body %></span>

  <p>
    <%= link_to "Show", book_path(book) %>
  </p>

  <p>
    <%= link_to "Edit", book_path(book) %>
  </p>

  <p>
    <%= link_to "Destroy", book_path(book), method: :delete %>
  </p>

<% end %>



